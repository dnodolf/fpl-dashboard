# Sleeper API
NEXT_PUBLIC_SLEEPER_API_URL=https://api.sleeper.app/v1
SLEEPER_LEAGUE_ID=your_league_id_here

# App Configuration
NEXT_PUBLIC_APP_NAME=FPL Roster Explorer
NEXT_PUBLIC_APP_VERSION=2.0.0