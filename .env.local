# .env.local (create this file for local development)
# DO NOT commit this file to git (already in .gitignore)

# Fantasy Football Hub API
NEXT_PUBLIC_FFH_API_URL=https://api.fantasyfootballhub.co.uk/api
FFH_BEARER_TOKEN=your_ffh_token_here

# Google Sheets
GOOGLE_SHEETS_SPREADSHEET_ID=your_spreadsheet_id_here
GOOGLE_SERVICE_ACCOUNT_EMAIL=your_service_account_email
